<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".accountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#12000000"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/secure_login"
            android:layout_height="150dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="#F5FFFDFD"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@drawable/id_bg"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/userimage"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#60000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="User Name"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:text="User Name"
                    android:id="@+id/account_name"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="0dp"
                    android:textStyle="normal"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#60000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Email Address"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:text="email address"
                    android:id="@+id/account_email"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="0dp"
                    android:textStyle="normal"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#60000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="User ID"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:text="User ID"
                    android:id="@+id/account_uid"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="0dp"
                    android:textStyle="normal"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#60000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Voter ID Number"
                    android:gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:text="XA473BDGDJKDK37@"
                    android:gravity="center"
                    android:id="@+id/account_voterID"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="0dp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#60000000"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:id="@+id/logout"
            android:layout_marginHorizontal="30dp"
            android:text="LOGOUT"/>

    </LinearLayout>

</FrameLayout>