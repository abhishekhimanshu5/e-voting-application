<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/secure_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Login using your Google account"
            android:textSize="15dp" />


            <TextView
                android:id="@+id/login"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/img"
                android:background="@drawable/bg_button"
                android:drawablePadding="10dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:paddingHorizontal="100dp"
                android:text="Select Google Account" />



        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We are only collecting name and email from Google to login your account."
            android:gravity="center"
            android:padding="10dp"/>


    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>